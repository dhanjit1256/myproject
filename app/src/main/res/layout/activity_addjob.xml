<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/buttonshape"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.DCompany.Job.AddjobActivity">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/segoeui"
                android:text="Add Job"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="bottom"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/showvaluelayout"
            android:visibility="gone"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:backgroundTint="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Job Has been added Successfully"
                android:textColor="#036507"
                android:textSize="20dp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Job Title"
                android:textColor="#119FAA"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/showtitle"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the job title"
                android:textColor="#000000"
                android:textSize="20dp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Job Description"
                android:textColor="#119FAA"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/showdetails"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Description"
                android:textColor="#000000"
                android:textSize="20dp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Amount"
                android:textColor="#119FAA"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/showamount"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Amount"
                android:textColor="#000000"
                android:textSize="20dp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Links"
                android:textColor="#119FAA"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/showlinks"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Description"
                android:clickable="true"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/close"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:backgroundTint="#A50707"
                android:text="Close"
                android:background="@drawable/button"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:backgroundTint="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Job Title *"
                android:textColor="#119FAA"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="Enter Job Title"
                android:padding="10dp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/titleis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000000"
                android:hint="Enter Job Title"
                android:padding="10dp" />
            <TextView
                android:id="@+id/errortitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Sorry this is alreday added"
                android:textColor="#FF0000" />

            <Button
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/checktitle"
                android:background="@drawable/buttonshape"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:backgroundTint="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:text="Job Description *"
                    android:textColor="#119FAA"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Job Description"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/errordetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Sorry this is alreday added"
                    android:textColor="#FF0000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Amount *"
                        android:textColor="#119FAA"
                        android:textAlignment="viewEnd"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Rs."
                        android:inputType="number"
                        android:padding="10dp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/erroramount"
                    android:layout_width="220dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:text="Sorry this is alreday added"
                    android:textColor="#FF0000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAlignment="viewEnd"
                        android:text="Links"
                        android:textColor="#119FAA"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/links"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Upload Documents"
                        android:padding="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/linkdetails"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="You can skip this or You can add google drive links which can include importent documents for this job."
                    android:textColor="#063780" />

                <TextView
                    android:id="@+id/errorall"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Sorry this is alreday added"
                    android:textColor="#FF0000" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/submit"
                    android:visibility="gone"
                    android:background="@drawable/buttonshape"
                    android:text="Submit"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="OR"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/tojoblist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:text="Job List"
                android:textAllCaps="false"
                android:textColor="#119FAA"
                android:drawableBottom="@drawable/next"
                android:textSize="25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
