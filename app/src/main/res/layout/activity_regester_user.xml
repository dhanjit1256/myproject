<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6000000"
    tools:context=".RegesterUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="328dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/segoeui"
                android:text="Personal Details"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/segoeui"
                android:text="Name"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/xname"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/input2"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="5sp"
                android:layout_marginTop="10dp"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Email"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/xemail"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/input2"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="5sp"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#666666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/xpassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Psssword"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/xpassword"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/input2"
                android:drawableStart="@drawable/ic_lock"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="5sp"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Phone"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/xphone"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/input2"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="5sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Address"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/xaddress"
                android:layout_width="339dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/input2"
                android:drawableStart="@drawable/address"
                android:drawableLeft="@drawable/address"
                android:drawablePadding="5sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textColorHint="#666666" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Gender"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/xgender"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/input2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Cast"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/xcast"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/input2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Date Of Birth"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/xdob"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/input2"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="5sp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Father's Name"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/xfname"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/input2"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="5sp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Mother's Name"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/xmname"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/input2"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="5sp"
                android:fontFamily="@font/segoeui"
                android:textColor="#ffffff"
                android:textColorHint="#666666" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Home Contact"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/xhomephone"
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/input2"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="5sp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <Button
                android:id="@+id/xregester"
                android:layout_width="350dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:text="Regester"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="75dp" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
