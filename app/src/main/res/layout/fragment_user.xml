<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context="com.example.DCompany.UserFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".UserProfile"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/xtoprofile"
                    android:layout_width="350dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/xprofilepic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/chatwhite" />

                    <TextView
                        android:id="@+id/xname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/xprofilepic"
                        android:fontFamily="@font/segoeui"
                        android:textColor="#9E000000"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/xname"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/xprofilepic"
                        android:fontFamily="@font/segoeui"
                        android:text="Go to your profile"
                        android:textColor="#4A000000"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="320dp"
                        android:src="@drawable/next" />

                </RelativeLayout>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>

                <TextView
                    android:id="@+id/xplscompro"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:text="Please Compleat Your Profile"
                    android:textColor="#037111"
                    android:textSize="18sp"
                    android:visibility="gone" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>

                <Button
                    android:id="@+id/xpersonalview"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:fontFamily="@font/segoeui"
                    android:drawableRight="@drawable/show"
                    android:paddingRight="20dp"
                    android:paddingLeft="40dp"
                    android:text="Personal Details"
                    android:textAlignment="textStart"
                    android:textColor="#82235377"
                    android:textSize="20dp" />



                <Button
                    android:id="@+id/xpersonalhide"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#6644C13C"
                    android:drawableRight="@drawable/hide"
                    android:fontFamily="@font/segoeui"
                    android:paddingRight="20dp"
                    android:paddingLeft="40dp"
                    android:text="Personal Details"
                    android:textAlignment="textStart"
                    android:textColor="#235377"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/xpersonal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F2F2F2"
                    android:paddingLeft="40dp"
                    android:visibility="gone"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:textStyle="bold"
                        android:text="Address"
                        android:textColor="#0000EC"
                        android:textSize="18dp" />


                    <TextView
                        android:id="@+id/xaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:textColor="#B7000000"
                        android:textSize="22dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Father's Name"
                        android:textColor="#0000EC"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xfname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:textColor="#B7000000"
                        android:textSize="22dp" />


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Mother's Name"
                        android:textColor="#0000EC"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xmname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:textColor="#B7000000"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Gender"
                        android:textColor="#0000EC"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xgender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:textColor="#B7000000"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Cast"
                        android:textColor="#0000EC"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xcast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:textColor="#B7000000"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Date Of Birth"
                        android:textColor="#0000EC"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xdob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:textColor="#B7000000"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Home Phone Number"
                        android:textColor="#0000EC"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xhomephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:textColor="#B7000000"
                        android:textSize="22dp" />

                </LinearLayout>




                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <Button
                    android:id="@+id/xprofessionalbutton"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:fontFamily="@font/segoeui"
                    android:paddingLeft="40dp"
                    android:drawableRight="@drawable/show"
                    android:paddingRight="20dp"
                    android:text="Professional Details"
                    android:textAlignment="textStart"
                    android:textColor="#82235377"
                    android:textSize="20dp" />


                <Button
                    android:id="@+id/xprofessionalbuttonhide"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#6644C13C"
                    android:fontFamily="@font/segoeui"
                    android:paddingLeft="40dp"
                    android:text="Personal Details"
                    android:drawableLeft="@drawable/hide"
                    android:textAlignment="textStart"
                    android:textColor="#235377"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/xprofessionalview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F2F2F2"
                    android:paddingLeft="40dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/segoeui"
                            android:textStyle="bold"
                            android:text="School Name"
                            android:textColor="#0000EC"
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/xschool"
                            android:layout_below="@+id/one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:textColor="#B7000000"
                            android:textSize="22dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/segoeui"
                            android:textStyle="bold"
                            android:text="College Name"
                            android:textColor="#0000EC"
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/xcollege"
                            android:layout_below="@+id/two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:textColor="#B7000000"
                            android:textSize="22dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/segoeui"
                            android:textStyle="bold"
                            android:text="Skill"
                            android:textColor="#0000EC"
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/xskill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:textColor="#B7000000"
                            android:textSize="22dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/xprofessionaledit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:background="#F2F2F2"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:text="School Name"
                        android:textColor="#0000EC"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editschool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="School Name"
                        android:drawableLeft="@drawable/school"
                        android:drawablePadding="5dp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/errorschool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This fild can not be empty"
                        android:textColor="#B80909"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:text="College Name"
                        android:textColor="#0000EC"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editcollege"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="College Name"
                        android:drawableLeft="@drawable/school"
                        android:drawablePadding="5dp"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/errorcollege"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This fild can not be empty"
                        android:textColor="#B80909"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Skills"
                        android:textColor="#0000EC"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100">

                        <EditText
                            android:id="@+id/editskill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_weight="90"
                            android:hint="Skill"
                            android:textSize="18sp"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/skilladd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:src="@drawable/add" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/errorskill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This fild can not be empty"
                        android:textColor="#B80909"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/saveprofessional"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Save"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/xpb"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="40dp"
                    android:visibility="gone"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <Button
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:fontFamily="@font/segoeui"
                    android:paddingLeft="40dp"
                    android:text="Account Details"
                    android:textAlignment="textStart"
                    android:drawableRight="@drawable/show"
                    android:paddingRight="20dp"
                    android:textColor="#82235377"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#6644C13C"
                    android:fontFamily="@font/segoeui"
                    android:paddingLeft="40dp"
                    android:text="Personal Details"
                    android:textAlignment="textStart"
                    android:textColor="#235377"
                    android:textSize="20dp"
                    android:visibility="gone" />

            <LinearLayout
                android:id="@+id/accountdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:background="#F2F2F2"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Select Bank"
                    android:textColor="#0000EC"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/bankname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Account Number"
                    android:textColor="#0000EC"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/accountnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Account Number"
                    android:drawableLeft="@drawable/account"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/segoeui"
                android:text="IFSC Code"
                android:textColor="#0000EC"
                android:textSize="15sp"
                android:textStyle="bold" />
                <EditText
                    android:id="@+id/ifsccode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IFSC Code"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Name"
                    android:textColor="#0000EC"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/accountholdername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Account Holder Name"
                    android:textSize="18sp" />

            </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <Button
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:fontFamily="@font/segoeui"
                    android:paddingLeft="40dp"
                    android:text="Salary Details"
                    android:drawableRight="@drawable/show"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textColor="#82235377"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#6644C13C"
                    android:fontFamily="@font/segoeui"
                    android:paddingLeft="40dp"
                    android:text="Personal Details"
                    android:textAlignment="textStart"
                    android:textColor="#235377"
                    android:textSize="20dp"
                    android:visibility="gone" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_marginLeft="30dp"
                    android:drawableLeft="@drawable/settingsblack"
                    android:drawablePadding="10dp"
                    android:text="Settings"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
                <Button
                    android:id="@+id/testttt"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:fontFamily="@font/segoeui"
                    android:drawablePadding="20dp"
                    android:text="Edit Profile"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/ic_user"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
                <Button
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:fontFamily="@font/segoeui"
                    android:drawablePadding="20dp"
                    android:text="Change Password"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
                <Button
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:fontFamily="@font/segoeui"
                    android:drawablePadding="20dp"
                    android:text="Contact Us"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/help"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/xlogout"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:fontFamily="@font/segoeui"
                    android:drawablePadding="20dp"
                    android:text="Sign Out"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/settingsblack"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:textSize="20dp"  />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



</FrameLayout>
